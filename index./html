<body>
    <div class="container">
        <h1>ğŸŒŸ WebXR AR ì²´í—˜</h1>
        
        <div id="status" class="status">
            WebXR ì§€ì› ì—¬ë¶€ë¥¼ í™•ì¸ ì¤‘...
        </div>

        <button id="startAR" disabled>AR ì‹œì‘í•˜ê¸°</button>
        <button id="stopAR" disabled>AR ì¢…ë£Œí•˜ê¸°</button>

        <div class="info">
            <strong>ğŸ“± ì‚¬ìš© ë°©ë²•:</strong><br>
            1. HTTPS í™˜ê²½ì—ì„œ ì ‘ì†í•´ì£¼ì„¸ìš”<br>
            2. AR ì§€ì› ë¸Œë¼ìš°ì € í•„ìš” (Chrome, Edge ë“±)<br>
            3. ì¹´ë©”ë¼ ê¶Œí•œì„ í—ˆìš©í•´ì£¼ì„¸ìš”<br>
            4. AR ì‹œì‘ í›„ í™”ë©´ì„ í„°ì¹˜í•˜ì—¬ 3D ê°ì²´ë¥¼ ë°°ì¹˜í•  ìˆ˜ ìˆìŠµë‹ˆë‹¤
        </div>
    </div>

    <script>
        class SimpleARApp {
            constructor() {
                this.scene = null;
                this.camera = null;
                this.renderer = null;
                this.xrSession = null;
                this.xrRefSpace = null;
                this.hitTestSource = null;
                this.reticle = null;
                this.objects = [];
                
                this.init();
            }

            async init() {
                await this.checkWebXRSupport();
                this.setupEventListeners();
            }

            async checkWebXRSupport() {
                const statusEl = document.getElementById('status');
                const startBtn = document.getElementById('startAR');

                if (!navigator.xr) {
                    statusEl.textContent = 'âŒ WebXRì´ ì§€ì›ë˜ì§€ ì•ŠëŠ” ë¸Œë¼ìš°ì €ì…ë‹ˆë‹¤';
                    statusEl.className = 'status not-supported';
                    return;
                }

                try {
                    const isSupported = await navigator.xr.isSessionSupported('immersive-ar');
                    if (isSupported) {
                        statusEl.textContent = 'âœ… ARì´ ì§€ì›ë©ë‹ˆë‹¤!';
                        statusEl.className = 'status supported';
                        startBtn.disabled = false;
                    } else {
                        statusEl.textContent = 'âš ï¸ ARì´ ì§€ì›ë˜ì§€ ì•ŠëŠ” ê¸°ê¸°ì…ë‹ˆë‹¤';
                        statusEl.className = 'status warning';
                    }
                } catch (error) {
                    statusEl.textContent = 'âŒ WebXR í™•ì¸ ì¤‘ ì˜¤ë¥˜ê°€ ë°œìƒí–ˆìŠµë‹ˆë‹¤';
                    statusEl.className = 'status not-supported';
                }
            }

            setupEventListeners() {
                document.getElementById('startAR').addEventListener('click', () => this.startAR());
                document.getElementById('stopAR').addEventListener('click', () => this.stopAR());
            }

            async startAR() {
                try {
                    // WebXR ì„¸ì…˜ ìš”ì²­
                    this.xrSession = await navigator.xr.requestSession('immersive-ar', {
                        requiredFeatures: ['hit-test'],
                        optionalFeatures: ['dom-overlay'],
                        domOverlay: { root: document.body }
                    });

                    // Three.js ì„¤ì •
                    this.setupThreeJS();
                    
                    // XR ì„¸ì…˜ ì„¤ì •
                    await this.setupXRSession();

                    // UI ì—…ë°ì´íŠ¸
                    document.querySelector('.container').style.display = 'none';
                    document.getElementById('stopAR').disabled = false;

                } catch (error) {
                    console.error('AR ì‹œì‘ ì‹¤íŒ¨:', error);
                    alert('ARì„ ì‹œì‘í•  ìˆ˜ ì—†ìŠµë‹ˆë‹¤. HTTPS í™˜ê²½ê³¼ ì¹´ë©”ë¼ ê¶Œí•œì„ í™•ì¸í•´ì£¼ì„¸ìš”.');
                }
            }

            setupThreeJS() {
                // Scene ìƒì„±
                this.scene = new THREE.Scene();

                // Renderer ìƒì„±
                this.renderer = new THREE.WebGLRenderer({ 
                    antialias: true, 
                    alpha: true 
                });
                this.renderer.setSize(window.innerWidth, window.innerHeight);
                this.renderer.xr.enabled = true;
                this.renderer.xr.setReferenceSpaceType('local');
                
                document.body.appendChild(this.renderer.domElement);

                // ì¡°ëª… ì¶”ê°€
                const ambientLight = new THREE.AmbientLight(0xffffff, 0.6);
                this.scene.add(ambientLight);
                
                const directionalLight = new THREE.DirectionalLight(0xffffff, 0.8);
                directionalLight.position.set(0, 10, 5);
                this.scene.add(directionalLight);

                // Reticle (ì¡°ì¤€ì ) ìƒì„±
                this.createReticle();
            }

            createReticle() {
                const geometry = new THREE.RingGeometry(0.02, 0.04, 32);
                const material = new THREE.MeshBasicMaterial({
                    color: 0xffffff,
                    transparent: true,
                    opacity: 0.8
                });
                this.reticle = new THREE.Mesh(geometry, material);
                this.reticle.matrixAutoUpdate = false;
                this.reticle.visible = false;
                this.scene.add(this.reticle);
            }

            async setupXRSession() {
                // Reference space ì„¤ì •
                this.xrRefSpace = await this.xrSession.requestReferenceSpace('local');
                
                // Hit test source ì„¤ì •
                const viewerSpace = await this.xrSession.requestReferenceSpace('viewer');
                this.hitTestSource = await this.xrSession.requestHitTestSource({ space: viewerSpace });

                // ë Œë”ë§ ì‹œì‘
                this.renderer.xr.setSession(this.xrSession);

                // ì´ë²¤íŠ¸ ë¦¬ìŠ¤ë„ˆ ì¶”ê°€
                this.xrSession.addEventListener('select', (event) => this.onSelect(event));
                this.xrSession.addEventListener('end', () => this.onSessionEnd());

                // ë Œë”ë§ ë£¨í”„ ì‹œì‘
                this.renderer.setAnimationLoop((timestamp, frame) => this.render(timestamp, frame));
            }

            render(timestamp, frame) {
                if (frame && this.hitTestSource) {
                    // Hit test ìˆ˜í–‰
                    const hitTestResults = frame.getHitTestResults(this.hitTestSource);
                    
                    if (hitTestResults.length > 0) {
                        const hit = hitTestResults[0];
                        const pose = hit.getPose(this.xrRefSpace);
                        
                        // Reticle ìœ„ì¹˜ ì—…ë°ì´íŠ¸
                        this.reticle.visible = true;
                        this.reticle.matrix.fromArray(pose.transform.matrix);
                    } else {
                        this.reticle.visible = false;
                    }
                }

                // ê°ì²´ë“¤ íšŒì „ ì• ë‹ˆë©”ì´ì…˜
                this.objects.forEach((obj, index) => {
                    obj.rotation.y += 0.01 * (index + 1);
                });

                this.renderer.render(this.scene, this.camera);
            }

            onSelect(event) {
                if (this.reticle.visible) {
                    // 3D ê°ì²´ ìƒì„± ë° ë°°ì¹˜
                    const object = this.createRandomObject();
                    object.position.setFromMatrixPosition(this.reticle.matrix);
                    object.position.y += 0.1; // ì•½ê°„ ìœ„ë¡œ ì˜¬ë¦¬ê¸°
                    
                    this.scene.add(object);
                    this.objects.push(object);
                }
            }

            createRandomObject() {
                const geometries = [
                    new THREE.BoxGeometry(0.1, 0.1, 0.1),
                    new THREE.SphereGeometry(0.05, 16, 16),
                    new THREE.ConeGeometry(0.05, 0.1, 8),
                    new THREE.CylinderGeometry(0.05, 0.05, 0.1, 8)
                ];

                const colors = [0xff6b6b, 0x4ecdc4, 0x45b7d1, 0xf9ca24, 0xf0932b, 0xeb4d4b, 0x6c5ce7];
                
                const geometry = geometries[Math.floor(Math.random() * geometries.length)];
                const color = colors[Math.floor(Math.random() * colors.length)];
                
                const material = new THREE.MeshPhongMaterial({ 
                    color: color,
                    shininess: 100
                });
                
                const mesh = new THREE.Mesh(geometry, material);
                mesh.scale.set(1, 1, 1);
                
                return mesh;
            }

            stopAR() {
                if (this.xrSession) {
                    this.xrSession.end();
                }
            }

            onSessionEnd() {
                // ì •ë¦¬ ì‘ì—…
                if (this.renderer && this.renderer.domElement) {
                    document.body.removeChild(this.renderer.domElement);
                }

                // ë³€ìˆ˜ ì´ˆê¸°í™”
                this.xrSession = null;
                this.renderer = null;
                this.scene = null;
                this.objects = [];

                // UI ë³µì›
                document.querySelector('.container').style.display = 'flex';
                document.getElementById('stopAR').disabled = true;
                document.getElementById('startAR').disabled = false;
            }
        }

        // ì•± ì‹œì‘
        window.addEventListener('DOMContentLoaded', () => {
            new SimpleARApp();
        });

        // í™”ë©´ í¬ê¸° ë³€ê²½ ì²˜ë¦¬
        window.addEventListener('resize', () => {
            if (window.arApp && window.arApp.renderer) {
                window.arApp.renderer.setSize(window.innerWidth, window.innerHeight);
            }
        });
    </script>
</body>
</html>
